<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="mainPane" minHeight="200.0" minWidth="200.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gr.uop.tresa.FXController">
   <center>
      <VBox alignment="TOP_CENTER" prefWidth="600.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
                <Label text="TReeeeeeeSA" VBox.vgrow="NEVER">
                    <font>
                        <Font size="36.0" />
                    </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
                </Label>
                <TextField fx:id="searchText" promptText="Search" VBox.vgrow="ALWAYS">
                    <font>
                        <Font size="13.0" />
                    </font>
               <VBox.margin>
                  <Insets left="150.0" right="150.0" />
               </VBox.margin>
                </TextField>
                <Button mnemonicParsing="false" onAction="#defaultSearch" text="Search">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Separator VBox.vgrow="ALWAYS" />
              <Text fx:id="searchResults" strokeType="OUTSIDE" strokeWidth="0.0">
                  <font>
                      <Font size="13.0" />
                  </font>
              </Text>
         </children>
      </VBox>
   </bottom>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#addFiles" text="Add File(s)..." />
                  <MenuItem mnemonicParsing="false" onAction="#deleteFiles" text="Delete File(s)..." />
                  <MenuItem mnemonicParsing="false" onAction="#editFileDialog" text="Edit File..." />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" onAction="#close" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#aboutUs" text="About Us" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
